<%= form_tag("/movies", method: "get") do %>
  <p>
    <%= label_tag(:term, "Search:") %>
    <%= text_field_tag(:term,nil, :placeholder =>"by title or director") %>
  </p>
  <p>
  <%= label_tag(:duration, "Search by duration:") %>
  <%= select_tag(:duration, options_for_select([['All', 1], ['Under 90 minutes', 2], ['Between 90 and 120 minutes', 3], ['Over 120 minutes', 4]])) %>
  </p>
  <%= submit_tag("Search") %>
<% end %>