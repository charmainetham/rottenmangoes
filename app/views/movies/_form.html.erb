<%= form_for @movie, html: {multipart:true} do |f| %>
  <% if @movie.errors.any? %>
    <div>
      <%= pluralize(@movie.errors.count, "error") %> prevented this movie from being submitted:
      <ul>
        <% @movie.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class = "formfield-stuff">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: "input" %>
  </div>
  <div class = "formfield-stuff">
    <%= f.label :release_date %><br>
    <%= f.date_field :release_date %>
  </div>
  <div class = "formfield-stuff">
    <%= f.label :director %><br>
    <%= f.text_field :director, class: "input" %>
  </div>
  <div class = "formfield-stuff">
    <%= f.label :runtime_in_minutes %><br>
    <%= f.number_field :runtime_in_minutes, class: "input" %>
  </div>
<!--   <div>
    <%= f.label :poster_image_url %><br>
    <%= f.text_field :poster_image_url %>
  </div> -->
   <div class = "formfield-stuff">
    <%= f.label :avatar %><br>
    <%= f.file_field :avatar %>
  </div>
  <div class = "formfield-stuff">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: "textarea" %>
  </div>
  <div class = "formfield-stuff">
    <%= f.submit "Submit", class: "button is-primary" %> 
  </div>
<% end %>