<h1>Rotten Mangoes HELLO!!</h1>

<p> <%= form_tag( movies_path, method: "get") do %>
  <%=text_field_tag :search, params[:search], placeholder: "Search" %>
  <%= submit_tag "Search", :name => nil %>
<% end %>
</p>

<p><%= link_to "Submit a movie!", new_movie_path %></p>

<hr>
<% @movies.each do |movie| %>
  <%= link_to image_tag(movie.avatar, height: '160', width: '260'), movie_path(movie) %>
  <h2><%=link_to movie.title, movie_path(movie) %></h2>
  <h3><%= formatted_date(movie.release_date) %></h3>
  <h4>Dir. <%= movie.director %> | <%= movie.runtime_in_minutes %>minutes</h4>
  <p><%= movie.description %></p>
  <p><%= movie.review_average %>/10</p>
  <hr>
<% end %>




